SRCS =	./main.cpp \
		./ClapTrap.cpp \
		./FragTrap.cpp \
		./DiamondTrap.cpp

OBJS =	${SRCS:.cpp=.o}

NAME =	FragTrap	

CFLAGS	= -Wall -Wextra -Werror

CPPFLAG =	-std=c++98

all:	${NAME}

%.o:	%.cpp 
		clang++ ${CFLAGS} ${CPPFLAG} -c $< -o $@

${NAME}:	${OBJS}
			clang++ ${CFLAGS} ${CPPFLAG} -o ${NAME} ${OBJS}

clean:
		rm -rf ${OBJS}

fclean:	clean
		rm -rf ${NAME}

re:	fclean all